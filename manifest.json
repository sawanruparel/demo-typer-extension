{
  "manifest_version": 3,
  "name": "Demo Typer - Realistic Typing Simulator",
  "version": "1.0.0",
  "description": "Simulate realistic human-like typing in web pages for demos and presentations. Save snippets with keyboard shortcuts.",
  "author": "Demo Typer Team",
  "homepage_url": "https://github.com/sawanruparel/demo-typer-extension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Demo Typer"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "type_last_snippet": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Type the last used snippet into the focused field"
    },
    "type_snippet_1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Type saved snippet #1"
    },
    "type_snippet_2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Type saved snippet #2"
    },
    "type_snippet_3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Type saved snippet #3"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}